
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
    #map {
        height: 800px;
        width: 100%;
        margin-top: 5%;
    }
    /* Optional: Makes the sample page fill the window. */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>

<div class="row">

    <div id="map"></div>
    <script>
        var map;
        function initMap() {

            var polska = { lat: 51.7197174, lng: 21.6368684 };
            map = new google.maps.Map(document.getElementById('map'), { zoom: 7, center: polska });
          
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAVNt_dbFnBPSurQdOJ0GzQRQnKrReY3DI&callback=initMap"
            async defer></script>
  
</div>
