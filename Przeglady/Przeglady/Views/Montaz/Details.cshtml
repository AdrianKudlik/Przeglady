    <script>
        mapboxgl.accessToken = 'pk.eyJ1Ijoia3JvbGlrMTE1IiwiYSI6ImNqcGs1azdsdDBlNmYzcXFpcWc4YWI2bTUifQ.JIZBLBRHPUuEC532LG2jvA';
        var map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v9',
