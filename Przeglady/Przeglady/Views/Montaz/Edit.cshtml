@model Przeglady.Models.Montaz

@{
    ViewData["Title"] = "Edytuj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nip" class="control-label"></label>
                <input asp-for="Nip" class="form-control" />
                <span asp-validation-for="Nip" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gwarancja" class="control-label"></label>
                <select asp-for="Gwarancja"
                        class="form-control"
                        asp-items="@(new SelectList(new List<SelectListItem>
                                     {
                                         new SelectListItem { Value = "12 miesięcy", Text = "12 miesięcy" },
                                         new SelectListItem { Value = "24 miesięcy", Text = "24 miesięcy" },
                                         new SelectListItem { Value = "36 miesięcy", Text = "36 miesięcy"  },


                                     },"Text","Value"))"></select>

            </div>
            <div class="form-group">
                <label asp-for="DataMontazu" class="control-label"></label>
                <input asp-for="DataMontazu" class="form-control" />
                <span asp-validation-for="DataMontazu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataOstatniegoPrzegladu" class="control-label"></label>
                <input asp-for="DataOstatniegoPrzegladu" class="form-control" />
                <span asp-validation-for="DataOstatniegoPrzegladu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Podreczniki" /> @Html.DisplayNameFor(model => model.Podreczniki)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ODOIA" /> @Html.DisplayNameFor(model => model.ODOIA)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SIGMA" /> @Html.DisplayNameFor(model => model.SIGMA)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Uwagi" class="control-label"></label>
                <textarea asp-for="Uwagi" class="form-control"></textarea>
                <span asp-validation-for="Uwagi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
