@model IEnumerable<Przeglady.Models.Montaz>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Montaże</h2>


<table class="table" style="width:100%;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DataMontazu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataOstatniegoPrzegladu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miejscowosc2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wojewodztwo2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwa)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DataMontazu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataOstatniegoPrzegladu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Miejscowosc2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Wojewodztwo2)
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Szczegóły</a>

                    @if ((await AuthorizationService.AuthorizeAsync(User, "Administrator")).Succeeded)
                    {
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edytuj</a>
                        <a asp-action="Delete" class="btn btn-primary" asp-route-id="@item.Id">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary btn-lg">Stwórz nowy</a>